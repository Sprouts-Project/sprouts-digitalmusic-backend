<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	">

	<!-- Authorities -->
	
	<bean id="authority1" class="org.sprouts.digitalmusic.model.Authority">
		<property name="authority" value="ADMIN" />
	</bean>

	<bean id="authority2" class="org.sprouts.digitalmusic.model.Authority">
		<property name="authority" value="USER" />
	</bean>

	<!-- UserAccounts -->

	<bean id="userAccount1" class="org.sprouts.digitalmusic.model.UserAccount">
		<property name="username" value="Peter" />
		<property name="password" value="36a54fce75d935df7b0975f4656e37640b6f0f3e279ff8bb9cb30d950ac7c474ded945e6418cce26" />
		<property name="authorities">
			<set>
				<ref bean="authority1" />
			</set>
		</property>
	</bean>
	
	<!-- Categories -->

	<bean id="category1" class="org.sprouts.digitalmusic.model.Category">
		<property name="name" value="Musical Instruments" />
	</bean>
	
	<!-- Items -->

	<bean id="item1" class="org.sprouts.digitalmusic.model.Item">
		<property name="title" value="Fender Stratocaster" />
		<property name="description" value="Best guitar ever." />
		<property name="brand" value="Fender" />
		<property name="price" value="690.00" />
		<property name="imUrl" value="http://www.fmicassets.com/Damroot/ZoomJpg/10003/0137002321_gtr_frt_001_rr.jpg" />
		<property name="categories">
			<set>
				<ref bean="category1" />
			</set>
		</property>
	</bean>
	
	<bean id="item2" class="org.sprouts.digitalmusic.model.Item">
		<property name="title" value="Fender Telecaster" />
		<property name="description" value="It's also nice." />
		<property name="brand" value="Fender" />
		<property name="price" value="615.00" />
		<property name="imUrl" value="http://www.fmicassets.com/Damroot/ZoomJpg/10001/0110202850_gtr_frt_001_rr.jpg" />
		<property name="categories">
			<set>
				<ref bean="category1" />
			</set>
		</property>
	</bean>
	
	<bean id="item3" class="org.sprouts.digitalmusic.model.Item">
		<property name="title" value="Fender Jazz Bass" />
